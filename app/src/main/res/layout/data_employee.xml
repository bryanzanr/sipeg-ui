<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/container_my_ask"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="5dp"
              android:background="@color/white"
              android:orientation="vertical"
              android:paddingBottom="20dp">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:text="@string/statistic"
            android:textColor="@color/black"
            android:textSize="18sp"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

        <TextView
                android:id="@+id/tv_att_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trigger"
                android:textColor="@color/black"
                android:textSize="24sp"/>

        <TextView
                android:id="@+id/tv_attitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_att_count"
                android:text="@string/task"
                android:textColor="@color/black"
                android:textSize="16sp"/>

        <TextView
                android:id="@+id/tv_att_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_att_count"
                android:layout_marginTop="5dp"
                android:drawableEnd="@drawable/ic_arrow_back_white_24px"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/ic_arrow_back_white_24px"
                android:text="@string/trigger"
                android:textColor="@color/text"
                android:textSize="12sp"/>

    </RelativeLayout>

    <ProgressBar
            android:id="@+id/progress_bar_attitude"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginTop="10dp"
            android:indeterminate="false"
            android:progress="50"
            android:progressDrawable="@drawable/bg_pb_attitude" />

    <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_attitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:visibility="gone" />

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

        <TextView
                android:id="@+id/tv_skl_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trigger"
                android:textColor="@color/black"
                android:textSize="24sp"/>

        <TextView
                android:id="@+id/tv_skill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_skl_count"
                android:text="@string/weight"
                android:textColor="@color/black"
                android:textSize="16sp"/>

        <TextView
                android:id="@+id/tv_skl_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_skl_count"
                android:layout_marginTop="5dp"
                android:drawableEnd="@drawable/ic_arrow_back_white_24px"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/ic_arrow_back_white_24px"
                android:text="@string/trigger"
                android:textColor="@color/text"
                android:textSize="12sp"/>

    </RelativeLayout>

    <ProgressBar
            android:id="@+id/progress_bar_skill"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginTop="10dp"
            android:indeterminate="false"
            android:progress="50"
            android:progressDrawable="@drawable/bg_pb_skill" />

    <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_skill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:visibility="gone" />

